<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="action_view_tracking" model="ir.actions.act_window">
            <field name="name">AfterShip Tracking</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">aftership.tracking</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[('purchase_id','=',active_id)]</field>
        </record>
    
        <record id="purchase_order_form_aftership" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button type="action" name="%(action_view_tracking)d" class="oe_stat_button" icon="fa-truck" string="Tracking" attrs="{'invisible': [('aftership_tracking_id','=',False)]}" />

                </xpath>
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="tracking_no_vendor" />
                    <field name="aftership_tracking_id" invisible="1"/>
                    <field name="aftership_state" attrs="{'invisible': [('aftership_tracking_id','=',False)]}"/>
                </xpath>
            </field>
        </record>
    
    
    
    </data>
</odoo>